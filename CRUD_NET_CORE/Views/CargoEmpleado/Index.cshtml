@model IEnumerable<CRUD_NET_CORE.Models.Entities.CargoEmpleado>

@{
    ViewData["Title"] = "Cargo";
}
 <div class="container" style="text-align:center; color:#a72d33;" >
<h1>CARGOS</h1>
 </div>
<body style="background-image:url(img/descarga.png); width:100%; height:100vh; background-size:cover; background-position:center;   padding:0;
    margin:0;">
    <p>

    </p>
    <table class="table table-hover" style="border:dashed; border-color:#a72d33; text-align:center;margin-left:auto ;margin-right:auto;width:480px;">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Cargo)
                </th>

                <th>
                    <a asp-action="CrearCargo" class="btn btn-outline-success"><i class="far fa-plus-square"></i> Crear Cargo</a>
                </th>
            </tr>
        </thead>
        <tbody style="border: dashed; border-color: #a72d33">
            @foreach (var item in Model)
            {
                <tr>

                    <td>
                        @Html.DisplayFor(modelItem => item.Cargo)
                    </td>

                    <td>
                        <a asp-action="CrearCargo" asp-route-id="@item.IdCargo"><i class="fa fa-marker fa-lg"></i>Editar</a> |
                        <a asp-action="Eliminar" asp-route-id="@item.IdCargo" class="text-danger m1-1" onclick="return confirm ('Deseas eliminar este registro?')"><i class="fa fa-trash-alt fa-lg"></i>Eliminar</a>
                    </td>
                </tr>
            }
        </tbody>
    </table>
</body>

